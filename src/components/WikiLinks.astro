---
import { getEntry } from "astro:content"
const post = Astro.props.post
const parentPost = await getEntry("commands", post.id.split("/").slice(0, -1).join("/") || "ðŸ¦†ðŸ’¨")

---

<style>
	.wiki-links {
		padding: 5px;
		background-color: light-dark(#f1f1f1, #333);
		border: 1px solid light-dark(#ccc, #555);
	}
	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	li {
		display: inline-block;
		border-left: 1px solid light-dark(#ccc, #555);
		padding-left: 4px;
	}
	li:first-child {
		border-left: none;
		padding-left: 0;
	}
</style>
<div class="wiki-links">
	<ul>
		{
			parentPost && (
				<li>
					<span>
						Parent: <a href={`/${parentPost.id}/`}>{parentPost.data.title}</a>
					</span>
				</li>
			)
		}
		<li>
			<a href={`https://github.com/BunnyNabbit/mcgalaxy-command-documentation/edit/main/${post.filePath}`} target="_blank" rel="noopener noreferrer"> Edit on GitHub </a>
		</li>
	</ul>
</div>
